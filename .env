# ============ APPLICATION ============
APP_NAME="RAG API"
APP_VERSION="1.0.0"
DEBUG=true
LOG_LEVEL="INFO"

# ============ API ============
API_HOST="0.0.0.0"
API_PORT=8007
API_PREFIX="/api/v1"

# ============ EMBEDDINGS ============
EMBEDDING_MODEL="sentence-transformers/all-MiniLM-L6-v2"
EMBEDDING_DIMENSION=384
EMBEDDING_DEVICE="cpu"
EMBEDDING_BATCH_SIZE=32
NORMALIZE_EMBEDDINGS=true

# ============ CHUNKING ============
CHUNK_SIZE=400
CHUNK_OVERLAP=80
MIN_CHUNK_SIZE=100
MAX_CHUNK_SIZE=600

# ============ VECTOR STORE ============
FAISS_INDEX_TYPE="IndexFlatIP"
FAISS_INDEX_PATH="data/processed/index.faiss"
FAISS_METADATA_PATH="data/processed/metadata.pkl"

# ============ RAG ============
DEFAULT_TOP_K=5
MIN_SIMILARITY_SCORE=0.40
MAX_CONTEXT_LENGTH=3000

# ============ PERFORMANCE ============
ENABLE_CACHE=true
CACHE_TTL=3600
MAX_WORKERS=4